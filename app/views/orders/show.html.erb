<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order <%= @order.email %>!</h4>
  </div>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="3">Product</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Subtotal</th>
      </tr>
    </thead>

    <tbody>
      <% @order.line_items.each do |item| %>
        <%# provide access to the product of each item %>
        <% @product = Product.find_by_id(item[:product_id])%>
        <%# render the _item view for orders %>
        <%= render 'item', product: @product, item: item %>
      <% end %>
    </tbody>

    <tfoot>
      <tr>
        <th colspan="5">TOTAL</th>
        <th> <%= humanized_money_with_symbol @order.total_cents / 100.00 %> </th>
       
      </tr>
    </tfoot>
  </table>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
